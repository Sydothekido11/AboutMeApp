<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".AboutMe"
    android:background="#46ffc1">

    <TextView android:text="All About Sydney Nemelka" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textSize="35dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Begin"
        android:id="@+id/beginButton"
        android:layout_below="@+id/artText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="91dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/artText"
        android:text="I consider myself very artistic and creative, so in my free time (which is rare) I paint or draw. Usually my projects are all fan art of my favorite movies, animes, video games etc. I specialize in colored pencils mostly, but every now and then I use acrylic paints."
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="56dp"
        android:textColor="black" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Anime"
        android:id="@+id/animeButton"
        android:layout_alignTop="@+id/beginButton"
        android:layout_toRightOf="@+id/beginButton"
        android:layout_toEndOf="@+id/beginButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Video Games"
        android:id="@+id/gameButton"
        android:layout_alignTop="@+id/animeButton"
        android:layout_toRightOf="@+id/animeButton"
        android:layout_toEndOf="@+id/animeButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Job"
        android:id="@+id/jobButton"
        android:layout_below="@+id/beginButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Korean Pop"
        android:id="@+id/kpopButton"
        android:layout_alignBottom="@+id/jobButton"
        android:layout_toRightOf="@+id/jobButton"
        android:layout_toEndOf="@+id/jobButton" />

</RelativeLayout>
