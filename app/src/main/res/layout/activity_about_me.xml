<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".AboutMe"
    android:background="#46ffc1">

    <TextView android:text="All About Sydney Nemelka" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textSize="35dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/artText"
        android:text="I consider myself very artistic and creative, so in my free time (which is rare) I paint or draw. Usually my projects are all fan art of my favorite movies, animes, video games etc. I specialize in colored pencils mostly, but every now and then I use acrylic paints."
        android:textColor="#0e0e0e"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/artButton"
        android:visibility="gone" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Art"
        android:id="@+id/artButton"
        android:layout_marginBottom="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="visible" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Anime"
        android:id="@+id/animeButton"
        android:layout_alignTop="@+id/artButton"
        android:layout_toRightOf="@+id/artButton"
        android:layout_toEndOf="@+id/artButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Video Games"
        android:id="@+id/gamesButton"
        android:layout_alignTop="@+id/animeButton"
        android:layout_toRightOf="@+id/animeButton"
        android:layout_toEndOf="@+id/animeButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Job"
        android:id="@+id/jobButton"
        android:layout_below="@+id/animeButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Korean Pop"
        android:id="@+id/kpopButton"
        android:layout_alignBottom="@+id/jobButton"
        android:layout_toRightOf="@+id/jobButton"
        android:layout_toEndOf="@+id/jobButton" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/animeText"
        android:text="Anime is a huge part of my life now. The only thing I watch is anime(or the occasional Korean drama). It has influenced me to take on learning Japanese and to study abroad in Japan during my 2nd year of college. My favorite animes are: Tokyo Ghoul, Durarara(pictured below), Your Lie in April, and Kill La Kill. "
        android:textSize="15dp"
        android:layout_above="@+id/artButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:visibility="gone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Video games are the reason I decided to get into computer programming. I started playing them when I was 6 and would watch my dad play Ocarina of Time or Majoras Mask and finally when I turned 8 the first game I played and completed was Ninja Gaiden (pictured below). My favorites are: Legend of Zelda, God of War, Dead Space, Ninja Gaiden, Dishonored and Bioshock."
        android:id="@+id/gamesText"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/gamesButton"
        android:layout_alignEnd="@+id/gamesButton"
        android:textColor="#010101"
        android:textSize="15dp"
        android:visibility="gone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I work at Cowabunga Bay in Draper. I am a lifeguard there, which means I watch the lazy river and manage the waterslides. It certainly isn’t the most exciting job in the world but you get tan and good money. My job really helped me come out of my shell. I’ve always been an extremely shy and  self-conscious person through out my entire life, but taking up this summer job made me socialize with other people and its really been a life saver.  (pun intended) "
        android:id="@+id/jobText"
        android:layout_above="@+id/artButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#010101"
        android:textSize="15dp"
        android:visibility="gone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Korean pop is the only thing I listen to, it was formerly heavy metal. I don’t think you need to understand what they are saying to enjoy the music; I think the message of the song is displayed well enough through the emotion and beat. My favorite groups are: BIGBANG, SHINee, BTS, EXO, Block B, MBLAQ and 2ne1."
        android:id="@+id/kpopText"
        android:layout_above="@+id/artButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="15dp"
        android:textColor="#010101"
        android:visibility="gone" />

</RelativeLayout>
